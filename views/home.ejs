<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Olympia 2nd Elder's Quorum</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .jumbotron {
          margin-top: 10px;
        }
    </style>
</head>

<body>
    <ul class="nav nav-pills pull-right">
            <li role="presentation"><a href="/">Home</a></li>
        </ul>
    <div class="container">
        <%- include('../partials/nav') %>
        <div class="jumbotron">
            <h1>Olympia 2nd Ward</h1>
            <table class="table">
                <tr>
                    <td><b>Meeting</b></td>
                    <td><b>Room</b></td>
                    <td><b>Time</b></td>
                </tr>
                <tr>
                    <td>Sacrament Meeting:</td>
                    <td>Chapel</td>
                    <td>11:30 - 12:30</td>
                </tr>
                <tr>
                    <td>Sunday School:</td>
                    <td>Relief Society Room</td>
                    <td>12:30 - 1:30</td>
                </tr>
                <tr>
                    <td>Priesthood:</td>
                    <td>Room 102</td>
                    <td>1:30 - 2:30</td>
                </tr>
            </table>
        </div>

        <div class="jumbotron">
            <h2>Building Location</h2>
            <iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJzY5rX411kVQRWrRMmalAZfA&key=AIzaSyBdsP4kOauhOO4P15grYk_xa884tSFNKKk" allowfullscreen></iframe> 
        </div>


        <h2>Announcements</h2>
        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                  <!-- loop over blog posts and render them -->
                  <% posts.forEach((post) => { %>
                    <a href="/post/<%= post.id %>" class="list-group-item">
                      <h4 class="list-group-item-heading"><%= post.title %></h4>
                      <p class="list-group-item-text"><%= post.date %> <%= post.time %></p>
                    </a>
                  <% }) %>
                </div>
            </div>
        </div>
       <!-- <%- include('../partials/footer') %> -->
    </div>
</body>

</html>